# -----------------------------------------------------------------------------
# Google Chrome
# -----------------------------------------------------------------------------

ADBLOCK_ID="gighmmpiobklfepjocnamgkkbiglidom"
if [ ! -d "${HOME}/Library/Application Support/Google/Chrome/Default/Extensions/${ADBLOCK_ID}" ]; then
  msg "Download and install AdBlock for Chrome"
  open -a "Google Chrome" "https://chrome.google.com/webstore/detail/${ADBLOCK_ID}"
fi

INSTAPAPER_ID="ldjkgaaoikpmhmkelcgkgacicjfbofhh"
if [ ! -d "${HOME}/Library/Application Support/Google/Chrome/Default/Extensions/${INSTAPAPER_ID}" ]; then
  msg "Download and install Instapaper for Chrome"
  open -a "Google Chrome" "https://chrome.google.com/webstore/detail/${INSTAPAPER_ID}"
fi

